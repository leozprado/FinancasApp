@page "/consulta-movimentacoes"

<div class="card m-4 shadow">
    <div class="card-body">

        <h4>Consulta de movimentações</h4>
        <p>Listagem de movimentações financeiras.</p>
        <hr />

        @if (!string.IsNullOrEmpty(mensagem))
        {
            <div class="alert alert-primary">
                <strong>@mensagem</strong>
            </div>
        }

        @* Formulário de cadastro *@
        <EditForm Model="form" OnValidSubmit="@ConsultarMovimentacoes">

            @* Ativar as validações do formulário *@
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col-md-3">
                    <InputText @bind-Value="form.DataMin" type="date" class="form-control" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() => form.DataMin)" />
                    </div>
                </div>
                <div class="col-md-3">
                    <InputText @bind-Value="form.DataMax" type="date" class="form-control" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() => form.DataMax)" />
                    </div>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary btn-sm me-2">
                        Realizar consulta
                    </button>
                </div>
                <div class="col-md-3 text-end">
                    <NavLink href="/cadastro-movimentacoes" class="btn btn-success btn-sm">
                        Cadastrar movimentação
                    </NavLink>
                </div>
            </div>

        </EditForm>

        <table class="table table-sm mt-3">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Categoria</th>
                    <th width="160">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in movimentacoes)
                {
                    <tr>
                        <td>@item.nome.ToUpper()</td>
                        <td>@item.data</td>
                        <td>@item.valor</td>
                        <td>@item.tipo</td>
                        <td>@item.categoria?.nome</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-outline-danger me-1">
                                Excluir
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        Quantidade de categorias: @(movimentacoes.Count)
                    </td>
                </tr>
            </tfoot>
        </table>

    </div>
</div>

@using FinancasApp.WEB.Models
@using FinancasApp.WEB.Forms

@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

@code {

    //Declarando uma lista de categorias
    private List<MovimentacaoModel> movimentacoes = new();

    //Declarando um atributo para o formulário
    private ConsultaMovimentacoesForm form = new();

    //Declarando um atributo para guardar mensagens
    private string mensagem = string.Empty;

    //Evento para consultar as movimentações
    protected async Task ConsultarMovimentacoes()
    {
        //Fazendo uma consulta de categorias na API
        movimentacoes = await Http.GetFromJsonAsync<List<MovimentacaoModel>>
           ("api/movimentacoes/" + form.DataMin + "/" + form.DataMax) ?? new();
    }

}
